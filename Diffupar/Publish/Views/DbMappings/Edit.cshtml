@model ASDWP.Models.DbMapping

@{
    ViewBag.Title = "Edit";
}

<h2>Mapping Query @Model.DbQuery.Name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Query</label>
            <div class="col-md-10">
                @Html.DropDownList("QueryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QueryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Columna Origen</label>
            <div class="col-md-10">
                @Html.DropDownList("ColumnSourceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ColumnSourceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Columna Destino</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ColumnDestino, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ColumnDestino, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Volver", "Details","DbQueries",new {id=Model.QueryId}, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
